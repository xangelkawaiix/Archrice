;foreground = ${xrdb:color7:#222}
foreground = #d8dee8
foreground-alt = #555
primary = #ffb52a
alert = #e60053
transparent = #00000000

[bar/LVDS-1]
monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 25
;offset-x = 1%
;offset-y = 1%
;radius = 5
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

