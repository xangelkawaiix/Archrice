module-margin-right = 1

font-0 = M+ 1m:pixelsize=12;1
font-1 = Sazanami Mincho:pixelsize=11;1
font-2 = FontAwesome:fontformat=truetype:size=10;0
font-3 = joypixels:fontformat=truetype:scale=10;0

modules-left = i3 xwindow
modules-center =
modules-right = mpd pulseaudio wlan eth battery date

tray-position = right
tray-padding = 0
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

